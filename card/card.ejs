<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet" data-remove="false" data-concat="false">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js" data-remove="false" data-concat="false"></script>
    <link rel="stylesheet" href="http://cdn.parlameter.si/libs/perfect-scrollbar/perfect-scrollbar.css" data-remove="false" data-concat="false">
    <script src="http://cdn.parlameter.si/libs/perfect-scrollbar/perfect-scrollbar.js" data-remove="false" data-concat="false"></script>


    <!-- these are your (s)css and js files -->
    <link rel="stylesheet" href="scss/style.css" data-prefix="true">
    <script src="js/script.js" data-prefix="true"></script>
    <!-- your extra (s)css and js files should be above this line -->
</head>

<body onload="iframeResizePipe()">
<iframe id="helpframe" src='' height='0' width='0' frameborder='0'></iframe>
<!-- Livereload script for development only (stripped during dist build) -->
<script src="http://localhost:35729/livereload.js" data-concat="false" data-remove="false"></script>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <!-- everything above here is part of the page and not part of the card -->
            <div class="card-container card-halfling">
                <div class="card-header">
                    <div class="card-header-border"></div>
                    <h1>Poslanec</h1> <!-- this text is the only thing you touch in .card-header -->
                </div>
                <div class="card-content" id="recent-activity">

                    <div id="scrollbar">


                        <% for(var i=0;i<data.length;i++) {
                            var day = data[i];
                        %>

                        <section>
                            <span class="date"><%- day.date %></span>

                            <ul>

                                <% for(var j=0;j<day.events.length; j++){
                                    var event = day.events[j];
                                    var icon = '';
                                %>
                                <% if(event.type === 'ballot'){
                                switch(event.option){
                                    case 'Za':
                                    icon = 'glyphicon-comment';
                                    break;
                                    case 'Proti':
                                        icon = 'glyphicon-remove';
                                        break;
                                    case 'Ni':
                                        icon = 'glyphicon-user';
                                        break;
                                }
                                %>
                                <li>
                                    <span class="glyphicon <%- icon %>"></span>
                                    <p>Glasoval/a <%- event.option %> <a href="#"><%- event.vote_name%></a></p>
                                </li>
                                <% } else if(event.type === 'speech') {%>
                                <li>
                                    <span class="glyphicon glyphicon-comment"></span>
                                    <p><a href="#">Govoril/a</a> na <a href="#"><%- event.session_name %></a></p>
                                </li>
                                <% }  %>
                                <% } %>


                            </ul>

                        </section>

                        <% } %>

                    </div>

                </div>
                <div class="card-footer">
                    <div class="card-circle-button card-share"></div>
                    <div class="card-circle-button card-embed">&lt;/&gt;</div>
                    <div class="card-circle-button card-info">i</div>
                </div>
            </div>
            <!-- everything below here is part of the page and not part of the card -->

        </div>
    </div>
</div>
</body>

</html>
